{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "rootDir": "src/",
  "include": [
    "src/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

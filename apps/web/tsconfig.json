{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.web.json",
  "compilerOptions": {
    /* Paths */
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["../../packages/frontend/src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "./src/**/*.ts",
    "./src/**/*.vue",
    "../../packages/frontend/src/**/*.ts",
    "../../packages/frontend/src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}

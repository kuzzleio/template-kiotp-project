{
  "name": "template-iot-api",
  "version": "1.0.0",
  "description": "Template IoT platform api",
  "author": "",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --build",
    "prod": "node dist/app.js",
    "dev": "NODE_ENV=development ergol app.ts -c ergol.config.json",
    "format": "prettier lib/ tests/ --write",
    "test": "npm run test:lint && npm run test:types && npm run test:functional",
    "test:lint": "eslint ./lib ./tests --ext .ts",
    "test:lint:fix": "npm run test:lint -- --fix",
    "test:types": "tsc --noEmit -p tsconfig.test.json",
    "test:functional": "jest --runInBand",
    "fixtures": "npm run fixtures:asset_tracking && npm run fixtures:air_quality",
    "fixtures:asset_tracking": "kourou fixtures:load -a tenant=asset_tracking",
    "fixtures:air_quality": "kourou fixtures:load -a tenant=air_quality"
  },
  "main": "app.ts",
  "license": "Apache-2.0",
  "dependencies": {
    "@kuzzleio/iot-platform-backend": "3.1.0-beta.6",
    "@kuzzleio/plugin-multi-tenancy": "1.3.0",
    "@kuzzleio/plugin-workflows": "1.0.1",
    "@kuzzleio/scheduler": "1.1.7",
    "kuzzle": "2",
    "kuzzle-device-manager": "2.4.0-beta.5",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@types/lodash": "4.14.191",
    "@types/node": "18",
    "ergol": "1.0.2",
    "eslint-plugin-kuzzle": "0.0.12",
    "jest": "29.4.3",
    "kuzzle-sdk": "7.11.*",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.1.*"
  },
  "files": [
    "dist/**/"
  ],
  "kuzzle": {
    "paas": {
      "project": "<project>"
    }
  }
}
